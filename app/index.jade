doctype html
html(ng-app="MapaApp")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Web-Mapping
    link(rel="stylesheet" href="./lib/leaflet.css")
  body(ng-controller="MapaController")
    leaflet(lf-center="zacatecas" layers="layers" class="mapa" geojson="geojson" id="myMap")
    .info
      h4 Municipio: {{propiedades.NOM_MUN}}
    script(src="http://maps.google.com/maps/api/js?v=3.2&sensor=false")
    script(src="./lib/angular.min.js")
    script(src="./lib/leaflet.js")
    script(src="./lib/angular-simple-logger.min.js")
    script(src="./lib/Google.js")
    script(src="./lib/ui-leaflet.min.js")
    script(src='./js/mapa.js')
    link(rel="stylesheet" href="./css/app.css")
